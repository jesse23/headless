{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "DOM.Iterable",
      "es2017"
    ],
    "types": [ "./auto-imports.d.ts", "@headless/types/decl.d.ts" ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noEmit": false,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
