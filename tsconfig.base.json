{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2018", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    // "noEmit": true,
    "composite": false,
    // "incremental": true,
    "noEmitHelpers": true,
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    // `"strict": true,
    "target": "es2018",
    // "typeRoots": ["node_modules", "node_modules/@types"],
    "paths": {
      "@headless/core": ["libs/core/src"],
      "@headless/core/register": ["libs/core/src/register"],
      "@headless/view": ["libs/view/src"],
      "@headless/view/register": ["libs/view/src/register"],
      "@headless/ops": ["libs/ops/src"],
      "@headless/ops/register": ["libs/ops/src/register"],
      "@headless/components": ["libs/components/src"],
      "@headless/components/register": ["libs/components/src/register"],
      "@headless/react": ["libs/react/src"],
      "@headless/react/register": ["libs/react/src/register"],
      "@headless/tooling": ["libs/tooling"],
      "@headless/kit-sample": ["kits/kit-sample/src"],
      "@headless/models": ["libs/models/src"],
    }
  },
  "exclude": ["node_modules"]
}
