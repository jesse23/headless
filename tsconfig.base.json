{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2018", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    // "noEmit": true,
    "composite": false,
    // "incremental": true,
    "noEmitHelpers": true,
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    // `"strict": true,
    "target": "es2018",
    // "typeRoots": ["node_modules", "node_modules/@types"],
    "paths": {
      "@headless/kit-sample": ["kits/kit-sample/src"],
      "@headless/core": ["libs/core/src"],
      "@headless/core/register": ["libs/core/src/register"],
      "@headless/compiler": ["libs/compiler/src"],
      "@headless/compiler/register": ["libs/compiler/src/register"],
      "@headless/interop": ["libs/interop/src"],
      "@headless/interop/register": ["libs/interop/src/register"],
      "@headless/components": ["libs/components/src"],
      "@headless/components/register": ["libs/components/src/register"],
      "@headless/components/*": ["libs/components/src/*"],
      "@headless/reactivity/*": ["libs/reactivity/src/*"],
      "@headless/tooling": ["tools/tooling"]
    }
  },
  "exclude": ["node_modules"]
}
